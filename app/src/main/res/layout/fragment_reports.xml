<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.ReportsFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Views de Estado: Loading e Vazio -->
            <ProgressBar
                android:id="@+id/progressBarReports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textEstadoVazioReports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nenhum dado para exibir."
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Grupo de Views para os Dashboards -->
            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="card_sexo, card_pcd, card_faixa_etaria_geral, card_faixa_etaria_meninos, card_faixa_etaria_meninas, card_apadrinhamento" />

            <!-- Linha 1: Gráficos de Pizza -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_sexo"
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_pcd">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meninos X Meninas"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartSexo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_pcd"
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_sexo"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PCD X Não PCD"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartPcd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Linha 2: Gráfico de Barras - Faixa Etária Geral -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_faixa_etaria_geral"
                android:layout_width="0dp"
                android:layout_height="350dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/card_sexo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantidade por Faixa Etária (Geral )"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChartFaixaEtariaGeral"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Linha 3: Gráfico de Barras - Faixa Etária Meninos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_faixa_etaria_meninos"
                android:layout_width="0dp"
                android:layout_height="350dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/card_faixa_etaria_geral"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faixa Etária - Meninos"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChartFaixaEtariaMeninos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Linha 4: Gráfico de Barras - Faixa Etária Meninas -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_faixa_etaria_meninas"
                android:layout_width="0dp"
                android:layout_height="350dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/card_faixa_etaria_meninos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faixa Etária - Meninas"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChartFaixaEtariaMeninas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ÚLTIMA LINHA: Gráfico de Apadrinhamento -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_apadrinhamento"
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/card_faixa_etaria_meninas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status de Apadrinhamento"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartApadrinhamento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- SEU FAB E MENU CUSTOMIZADO PERMANECEM INTOCADOS -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMenuListagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Menu de opções reports"
        android:src="@drawable/ic_menu_24"
        app:backgroundTint="@color/primaria"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />

    <include
        android:id="@+id/menuCustom"
        layout="@layout/menu_custom_reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/fabMenuListagem"
        app:layout_constraintEnd_toEndOf="@id/fabMenuListagem"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>