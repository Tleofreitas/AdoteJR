    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFiltro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAno">

        <!-- Linha com título "Ano:", Spinner e RadioGroup com título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar por:"
                android:textColor="@color/azulEscuro"
                android:textStyle="bold" />

<!--            <RadioGroup-->
<!--                android:id="@+id/rgFiltroTipo"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal">-->

<!--                <RadioButton-->
<!--                    android:id="@+id/rbNome"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:checked="true"-->
<!--                    android:paddingRight="8dp"-->
<!--                    android:text="Nome"-->
<!--                    android:textColor="@color/black" />-->

<!--                <RadioButton-->
<!--                    android:id="@+id/rbCpf"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:paddingRight="8dp"-->
<!--                    android:text="CPF"-->
<!--                    android:textColor="@color/black" />-->

<!--                <RadioButton-->
<!--                    android:id="@+id/rbNCartao"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:paddingRight="8dp"-->
<!--                    android:text="N° Cartão"-->
<!--                    android:textColor="@color/black" />-->
<!--            </RadioGroup>-->
            <!-- Dentro do seu LinearLayout (ou CardView) de filtros -->

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFiltro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNome"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCpf"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPF" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNCartao"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N° Cartão" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSPadrinho"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ Padrinho" />

            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputPesquisa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeColor="@color/primaria"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:startIconDrawable="@drawable/ic_search">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pesquisar..." />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textCadastroXLimite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastros realizados: 1000 / 1000 - (100%)"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/azulEscuro"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardFiltro" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCadastros"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCadastroXLimite"
        tools:listitem="@layout/item_cadastros">

    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progressBarListagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/rvCadastros"
        app:layout_constraintBottom_toBottomOf="@+id/rvCadastros"
        app:layout_constraintStart_toStartOf="@+id/rvCadastros"
        app:layout_constraintEnd_toEndOf="@+id/rvCadastros"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textEstadoVazio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum cadastro encontrado."
        android:textAppearance="?attr/textAppearanceBody1"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/rvCadastros"
        app:layout_constraintBottom_toBottomOf="@+id/rvCadastros"
        app:layout_constraintStart_toStartOf="@+id/rvCadastros"
        app:layout_constraintEnd_toEndOf="@+id/rvCadastros"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>