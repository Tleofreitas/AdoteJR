<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppAdoteJrTLRF" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primaria</item>
        <item name="colorPrimaryVariant">@color/azulEscuro</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/destaque</item>
        <item name="colorSecondaryVariant">@color/azul</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Cor de fundo do app -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Cor das superfícies (como Cards ) -->
        <item name="colorSurface">@color/white</item>
        <!-- Cor do texto sobre o fundo e superfícies -->
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Cor de Erro -->
        <item name="colorError">@color/vermelhoCarmim</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <!--  Arredondam de imagens -->
    <style name="Circulo">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.AppAdoteJrTLRF" parent="Base.Theme.AppAdoteJrTLRF">
        <!-- Sem permissão para forçar o modo escuro neste tema -->
        <!-- tools:targetApi="q" = garante que o app não tenha problemas de compatibilidade em versões mais antigas do Android -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="ShapeAppearance.App.Button" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <!-- Aplique a aparência da forma que criamos acima -->
        <item name="shapeAppearance">@style/ShapeAppearance.App.Button</item>
        <!-- Os outros atributos que já tínhamos -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 3. Crie o estilo para o botão primário, que herda do estilo principal -->
    <style name="Widget.App.Button.Primary" parent="Widget.App.Button">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Barra de navegação inferior -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextColor">@color/selector_item_text_color</item>
        <item name="itemIconTint">@color/selector_item_icon_color</item>
    </style>
</resources>